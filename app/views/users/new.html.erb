<%= provide(:title, 'Registrieren') %>
<h1>Registrieren</h1>

<%= form_for @user do |f| %>
  <!-- Bei Fehlern diese anzeigen -->
  <% if @user.errors.any? %>
    <div class="error_message">
	  <h2>Nicht zul&auml;ssige Aktion</h2>
	  <ul>
	    <% for message in @user.errors.full_messages %>
	      <li><%= message %></li>
	    <% end %>
	  </ul>
    </div>
  <% end %>
  
  <!-- Registrierungsformular -->
  <div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>

      <%= f.label :name, "Name:" %>
      <%= f.text_field :name %>

      <%= f.label :email, "Email:" %>
      <%= f.text_field :email %>

      <%= f.label :password, "Passwort:" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Passwort Wiederholung:" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Registrierung abschicken", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
<% end %>
