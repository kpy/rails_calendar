<% provide(:title, 'Login') %>
<h1>Login</h1>

<div class="row">
  <div class="span6 offset3">
  	<%= form_for(:session, url: sessions_path) do |f| %>
      
      <%= f.label :email, "Email:" %>
      <%= f.text_field :email %>

      <%= f.label :password, "Passwort:" %>
      <%= f.password_field :password %>

      <%= f.submit "Login", class: "btn btn-large btn-primary" %>
    <% end %>
    <p>
    	Sie haben noch keinen Login? Dann k&ouml;nnen Sie sich <%= link_to "hier", sign_up_path %> registrieren.
    </p>
  </div>
</div>